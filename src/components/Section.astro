---
const { id, title, text, imgSrc, imgAlt, imagePosition } = Astro.props;
---

<section id={id} class="px-4 py-8 antialiased bg-slate-950 md:py-16">
  <div
    class="mx-auto grid max-w-screen-xl rounded-2xl p-4 bg-slate-900/90 ring-1 ring-slate-800 md:p-8 lg:grid-cols-12 lg:gap-8 lg:p-12 xl:gap-16"
  >
    <div
      class={`lg:col-span-5 lg:mt-0 ${imagePosition === "right" ? "lg:order-2" : ""}`}
    >
      <img
        class="mb-4 h-56 w-full rounded-xl object-cover sm:h-80 md:h-full"
        src={imgSrc}
        alt={imgAlt}
      />
    </div>
    <div class="me-auto place-self-center lg:col-span-7">
      <h1
        class="mb-3 text-2xl font-bold leading-tight tracking-tight text-white md:text-4xl"
      >
        {title}
      </h1>
      <p class="mb-6 text-slate-300">{text}</p>
    </div>
  </div>
</section>
